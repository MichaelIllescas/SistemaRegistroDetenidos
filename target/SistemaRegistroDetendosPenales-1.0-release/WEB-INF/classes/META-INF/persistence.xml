<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="RegitroDetenidosPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>logica.Causa</class>
    <class>logica.Defensoria</class>
    <class>logica.Denunciante</class>
    <class>logica.Detenido</class>
    <class>logica.EstadoCivil</class>
    <class>logica.EstadoUsuario</class>
    <class>logica.Fiscalia</class>
    <class>logica.Juzgado</class>
    <class>logica.Nacionalidad</class>
    <class>logica.Persona</class>
    <class>logica.Policia</class>
    <class>logica.Registro</class>
    <class>logica.Reporte</class>
    <class>logica.Usuario</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/registro_detenidos?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
